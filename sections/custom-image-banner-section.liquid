<!--
  This is a responsive image banner section for Shopify.
  - Allows you to select a banner image.
  - Displays a heading, a subheading, and an optional button.
  - All text content is centered vertically and horizontally over the image.
  - Section settings allow for easy customization of content, colors, and banner height.
-->

<style>
  .image-banner-section {
    position: relative;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .image-banner__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .image-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .image-banner__content {
    position: relative;
    z-index: 3;
    padding: 2rem;
    max-width: 800px;
  }

  .image-banner__heading {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.heading_font_size }}px;
    font-weight: bold;
    margin: 0 0 0.5rem;
    line-height: 1.2;
  }

  .image-banner__text {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_font_size }}px;
    margin: 0 0 1.5rem;
  }

  .image-banner__button {
    display: inline-block;
    padding: 0.75rem 2rem;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    transition: transform 0.2s ease-in-out;
  }

  .image-banner__button:hover {
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    /* Typography settings now apply on all screen sizes. */
    /* You can add mobile-specific overrides here if needed. */
  }
</style>

<div
  class="image-banner-section"
  style="height: {{ section.settings.section_height }}vh;"
>
  {%- if section.settings.image != blank -%}
    <img
      src="{{ section.settings.image | image_url: width: 2000 }}"
      alt="{{ section.settings.image.alt | escape }}"
      loading="lazy"
      class="image-banner__image"
      width="{{ section.settings.image.width }}"
      height="{{ section.settings.image.height }}"
    >
  {%- else -%}
    {{ 'lifestyle-1' | placeholder_svg_tag: 'image-banner__image' }}
  {%- endif -%}

  <div class="image-banner__overlay"></div>

  <div class="image-banner__content">
   
     <h2 
        class="image-banner__heading"
        style="color: {{ section.settings.text_color }}; font-size: {{ section.settings.heading_font_size }}px;"
        >
  {{ section.settings.heading | escape }}
</h2>

<div 
  class="image-banner__text"
  style="color: {{ section.settings.text_color }}; font-size: {{ section.settings.text_font_size }}px;"
>
  {{ section.settings.text }}
</div>


    {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
      <a href="{{ section.settings.button_link }}" class="image-banner__button">
        {{ section.settings.button_label | escape }}
      </a>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Image Banner",
  "tag": "section",
  "class": "image-banner-wrapper",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner Image"
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Section Height",
      "default": 60
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Image Banner"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Give your customers a reason to buy from you. Tell your brand's story.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Colors & Overlay"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Image Overlay Opacity",
      "default": 30
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "min": 24,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Heading Font Size",
      "default": 40
    },
    {
      "type": "range",
      "id": "text_font_size",
      "min": 14,
      "max": 32,
      "step": 1,
      "unit": "px",
      "label": "Text Font Size",
      "default": 18
    }
  ],
  "presets": [
    {
      "name": "Image Banner"
    }
  ]
}
{% endschema %}


