<div class=" event-countdown-section isolate color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section">
   <div class="event-countdown__flex-container">
  <div class="event-countdown__media">
    <div class="image-with-text__media media">
      {%- if section.settings.image != blank -%}
        <img
          srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
            {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
            {%- if section.settings.image.width >= 535 -%}{{ section.settings.image | image_url: width: 535 }} 535w,{%- endif -%}
            {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
            {%- if section.settings.image.width >= 1070 -%}{{ section.settings.image | image_url: width: 1070 }} 1070w,{%- endif -%}
            {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
            {{ section.settings.image | image_url }} {{ section.settings.image.width }}w"
          src="{{ section.settings.image | image_url: width: 1500 }}"
          sizes="(min-width: 768px) 50vw, 100vw"
          alt="{{ section.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
        >
      {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>
  </div>

  <div class="event-countdown__content">
    {%- if section.settings.subheading != blank -%}
      <p class="event-subheading">{{ section.settings.subheading | escape }}</p>
    {%- endif -%}
    {%- if section.settings.heading != blank -%}
      <h2 class="image-with-text__heading h2">{{ section.settings.heading | escape }}</h2>
    {%- endif -%}
    {%- if section.settings.description != blank -%}
      <div class="image-with-text__text rte body">{{ section.settings.description }}</div>
    {%- endif -%}
    
    <div class="event-countdown-timer" data-countdown-date="{{ section.settings.event_date }}">
      <div class="time">
        <span class="count" data-days>00:</span>
        <span class="label">Days</span>
      </div>
      <div class="time">
        <span class="count" data-hours>00:</span>
        <span class="label">Hours</span>
      </div>
      <div class="time">
        <span class="count" data-minutes>00:</span>
        <span class="label">Minutes</span>
      </div>
      <div class="time">
        <span class="count" data-seconds>00</span>
        <span class="label">Seconds</span>
      </div>
    </div>

    {%- if section.settings.enable_author -%}
      <div class="author-info">
        {%- if section.settings.author_image != blank -%}
          <img class="author-image" src="{{ section.settings.author_image | image_url: width: 70 }}" alt="{{ section.settings.author_image.alt | default: 'Author' | escape }}" loading="lazy" width="70" height="70">
        {%- endif -%}
        <div class="author-text">
          {%- if section.settings.author_line_1 != blank -%}
            <h3 class="h4">{{ section.settings.author_line_1 }}</h3>
          {%- endif -%}
          {%- if section.settings.author_line_2 != blank -%}
            <p>{{ section.settings.author_line_2 }}</p>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}
    
    {%- if section.settings.button_label != blank -%}
      <a href="{{ section.settings.button_link }}" class="button button--secondary">
        {{ section.settings.button_label | escape }}
      </a>
    {%- endif -%}
  </div>
</div>
  </div>
</div>

<style>
  .event-countdown-section {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  /* Flexbox Layout */
  .event-countdown__flex-container {
    display: flex;
    flex-direction: row; /* Image on left, text on right */
    align-items: center;  /* Vertically centers content */
    gap: 2rem; /* Adds space between image and text */
  }

  .event-countdown__media,
  .event-countdown__content {
    flex: 1 1 50%; /* Each takes up 50% of the width */
    min-width: 0; /* Prevents flex items from overflowing */
  }

  .event-countdown__content {
    padding: 2rem 4rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start; /* Aligns content to the left */
    justify-content: center;
    height: 100%;
  }

  .event-countdown__media img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensures image covers the area nicely */
  }
  
  /* General Styling (mostly unchanged) */
  .event-subheading {
    font-size: 1.4rem;
    margin-bottom: 0.5rem;
    color: rgba(var(--color-foreground), 0.75);
  }

  .image-with-text__heading {
    margin-top: 0;
    margin-bottom: 1.5rem;
  }

  .event-countdown-timer {
    display: flex;
    gap: 15px;
    margin: 2rem 0;
  }

  .event-countdown-timer .time {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .event-countdown-timer .count {
    font-size: 2.8rem;
    font-weight: 600;
    line-height: 1.2;
    color: rgb(var(--color-base-text));
  }

  .conut {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .event-countdown-timer .label {
    font-size: 1.2rem;
    text-transform: uppercase;
    color: rgba(var(--color-foreground), 0.75);
  }

  .author-info {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 2rem;
  }

  .author-image {
    border-radius: 50%;
    width: 50px;
    height: 50px;
    object-fit: cover;
  }

  .author-text h3,
  .author-text p {
    margin: 0;
    line-height: 1.4;
  }

   .author-text h3 {
    font-weight: 500;
   }

 

  /* Responsive Styling for Mobile */
  @media screen and (max-width: 900px) {
    .event-countdown__flex-container {
      flex-direction: column; /* Stacks image on top of text */
      width: 100%;

    }

    .event-countdown__content {
      padding: 1.5rem;
      align-items: center; /* Center-aligns content on mobile */
      text-align: center;
    }
    .event-countdown__media img {
    max-width: 100%;
    height: auto; /* prevent stretching */
  }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const countdownTimer = document.querySelector('.event-countdown-timer');
    if (!countdownTimer) return;

    const targetDate = new Date(countdownTimer.dataset.countdownDate.replace(/-/g, '/')).getTime();
    
    const updateCountdown = () => {
      const now = new Date().getTime();
      const distance = targetDate - now;

      if (distance < 0) {
        countdownTimer.innerHTML = "<p>The event has started!</p>";
        clearInterval(interval);
        return;
      }
      
      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      countdownTimer.querySelector('[data-days]').innerText = String(days).padStart(2, '0');
      countdownTimer.querySelector('[data-hours]').innerText = String(hours).padStart(2, '0');
      countdownTimer.querySelector('[data-minutes]').innerText = String(minutes).padStart(2, '0');
      countdownTimer.querySelector('[data-seconds]').innerText = String(seconds).padStart(2, '0');
    };

    const interval = setInterval(updateCountdown, 1000);
    updateCountdown(); 
  });
</script>

