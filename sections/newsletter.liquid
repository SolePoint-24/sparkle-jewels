{% comment %}
  This section renders a full-width newsletter signup form
  over a background image.
{% endcomment %}

{%- liquid
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign image = section.settings.background_image
  assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.0
-%}

{%- if image != blank -%}
  <style>
    #shopify-section-{{ section.id }} .newsletter__wrapper {
      background-image: url('{{ image | image_url: width: 1920 }}');
    }

    #shopify-section-{{ section.id }} .newsletter__overlay {
      background-color: #000;
      opacity: {{ overlay_opacity }};
    }
  </style>
{%- endif -%}

<section
  class="newsletter__section color-{{ section.settings.color_scheme }} gradient"
  id="shopify-section-{{ section.id }}"
>
  <div class="newsletter__wrapper">
    {%- if image != blank -%}
      <div class="newsletter__overlay"></div>
    {%- endif -%}
    <div class="newsletter__content page-width">
      {%- if heading != blank -%}
        <h2 class="newsletter__heading">{{ heading | escape }}</h2>
      {%- endif -%}

      {%- if subheading != blank -%}
        <div class="newsletter__subheading rte">{{ subheading }}</div>
      {%- endif -%}

      {%- form 'customer', class: 'newsletter__form' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter__form-field">
          <label for="NewsletterForm--{{ section.id }}" class="visually-hidden">
            {{ 'templates.contact.form.email' | t }}
          </label>
          <input
            id="NewsletterForm--{{ section.id }}"
            type="email"
            name="contact[email]"
            class="newsletter__input"
            value=""
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"
            required
          >
          <button type="submit" class="newsletter__submit" name="commit" aria-label="{{ 'general.newsletter_form.submit' | t }}">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-right" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M5 12l14 0"></path>
              <path d="M13 18l6 -6"></path>
              <path d="M13 6l6 6"></path>
            </svg>
          </button>
        </div>
      {%- endform -%}
    </div>
  </div>
</section>

<style>
  .newsletter__wrapper {
    position: relative;
    background-size: cover;
    background-position: center;
    min-height: 400px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 50px 20px;
  }
  
  .newsletter__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .newsletter__content {
    position: relative;
    z-index: 2;
    text-align: center;
    color: #ffffff;
    width: 100%;
    max-width: 550px;
  }
  
  .newsletter__heading {
    font-family: 'Times New Roman', Times, serif; /* Serif font like the image */
    font-size: 2.8rem;
    font-weight: 400;
    margin-top: 0;
    margin-bottom: 15px;
  }
  
  .newsletter__subheading {
    font-size: 0.9rem;
    letter-spacing: 0.5px;
    opacity: 0.8;
    margin-bottom: 30px;
  }
  
  .newsletter__form-field {
    position: relative;
    width: 100%;
    max-width: 400px;
    margin: 0 auto;
  }
  
  .newsletter__input {
    width: 100%;
    padding: 14px 50px 14px 20px; /* Space on the right for the arrow */
    background-color: rgba(0, 0, 0, 0.5);
    color: #ffffff;
    border: 1px solid #ffffff;
    font-size: 1rem;
    line-height: 1.5;
  }
  
  .newsletter__input::placeholder {
    color: #cccccc;
    opacity: 1;
  }
  
  .newsletter__submit {
    position: absolute;
    top: 0;
    right: 0;
    height: 100%;
    width: 50px;
    background: transparent;
    border: none;
    color: #ffffff;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    transition: opacity 0.3s ease;
  }

  .newsletter__submit:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .newsletter__heading {
      font-size: 2.2rem;
    }
  }
</style>

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Join Our Newsletter"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>FIRST AND FOREMOST, AN EMAIL NEWSLETTER SIGNUP SHOULD INCENTIVIZE PEOPLE TO SIGN UP</p>"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Image overlay opacity",
      "default": 30
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "background-1"
    }
  ]
}
{% endschema %}