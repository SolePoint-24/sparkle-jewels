{% comment %}
  Section: Collection Hero
  - Displays a dynamic hero banner for the current collection.
  - Includes breadcrumbs.
  - Uses the collection's featured image as the background.
{% endcomment %}

{%- liquid
  #Use the specific collection's image if available, otherwise use the default.
  assign hero_image = collection.image | default: section.settings.default_image
 -%}

<style>
  #shopify-section-{{ section.id }} .collection-hero__wrapper {
    background-image: url('{{ hero_image | image_url: width: 1920 }}');
  }

  #shopify-section-{{ section.id }} .collection-hero__overlay {
    background-color: #000;
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  }
</style>

<section class="collection-hero" id="shopify-section-{{ section.id }}">
  <div class="collection-hero__wrapper">
    <div class="collection-hero__overlay"></div>
    <div class="collection-hero__content page-width">
      
      <nav class="breadcrumbs" aria-label="breadcrumbs">
        <a href="/" title="Home">Home</a>
        <span class="separator">&gt;</span>
        {%- if collection.handle -%}
          <a href="{{ routes.collections_url }}">Collections</a>
          <span class="separator">&gt;</span>
          <strong>{{ collection.title }}</strong>
        {%- else -%}
           <strong>{{ page_title }}</strong>
        {%- endif -%}
      </nav>

      <h1 class="collection-hero__title">
        {{ collection.title | default: page_title }}
      </h1>
      
    </div>
  </div>
</section>

<style>
  .collection-hero__wrapper {
    position: relative;
    background-size: cover;
    background-position: center;
    min-height: 280px;
    display: flex;
    justify-content: flex-start; /* Aligns content to the left */
    align-items: center;
    color: #ffffff;
  }
  .collection-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  .collection-hero__content {
    position: relative;
    z-index: 2;
    padding-top: 40px;
    padding-bottom: 40px;
  }
  
  /* Breadcrumb styles within the hero */
  .collection-hero .breadcrumbs {
    font-size: 0.9em;
    margin-bottom: 15px;
  }
  .collection-hero .breadcrumbs a,
  .collection-hero .breadcrumbs span,
  .collection-hero .breadcrumbs strong {
    color: #ffffff;
    text-decoration: none;
  }
  .collection-hero .breadcrumbs a:hover {
    text-decoration: underline;
  }
  .collection-hero .breadcrumbs .separator {
    margin: 0 8px;
    opacity: 0.7;
  }

  /* Title styles */
  .collection-hero__title {
    font-family: 'Times New Roman', Times, serif;
    font-size: 2.8rem;
    font-weight: 400;
    margin: 0;
    color: #ffffff;
  }
  @media (max-width: 768px) {
    .collection-hero__title {
      font-size: 2.2rem;
    }
  }
</style>

{% schema %}
{
  "name": "Collection Hero",
  "tag": "section",
  "class": "collection-hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "default_image",
      "label": "Default Background Image",
      "info": "Shown for collections without a featured image."
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Image overlay opacity",
      "default": 30
    }
  ]
}
{% endschema %}