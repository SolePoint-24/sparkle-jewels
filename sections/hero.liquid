{% comment %}
  This section creates a hero banner with an interactive collection carousel.
  - Background images are pulled from the featured image of collections you select.
  - The carousel at the bottom right allows users to switch between these collections.
{% endcomment %}

<div
  id="Hero-{{ section.id }}"
  class="hero-carousel-section color-{{ section.settings.color_scheme }}"
  data-section-id="{{ section.id }}"
>
  <div class="hero-carousel__media-container">
    {%- for block in section.blocks -%}
      {%- if block.type == 'collection_slide' -%}
        {%- assign collection = block.settings.collection -%}
        {%- comment -%} Use collection image, or fallback to the first product's image {%- endcomment -%}
        {%- assign slide_image = collection.image | default: collection.products.first.featured_image -%}

        {% if slide_image != blank %}
          {%- if forloop.first -%}
            {{
              slide_image
              | image_url: width: 3840
              | image_tag:
                loading: 'eager',
                fetchpriority: 'high',
                class: 'hero-carousel__media-image is-active',
                data-collection-handle: collection.handle
            }}
          {%- else -%}
            {{
              slide_image
              | image_url: width: 3840
              | image_tag:
                loading: 'lazy',
                class: 'hero-carousel__media-image',
                data-collection-handle: collection.handle
            }}
          {%- endif -%}
        {% else %}
          <div class="hero-carousel__media-image is-active" data-collection-handle="{{ collection.handle }}">
            {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      {%- endif -%}
    {%- endfor -%}
  </div>

  <div class="hero-carousel__content-container page-width">
    <div class="hero-carousel__content-inner">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'subheading' -%}
            <p class="hero-carousel__subheading" {{ block.shopify_attributes }}>
              {{ block.settings.subheading | escape }}
            </p>
          {%- when 'heading' -%}
            <h1 class="hero-carousel__heading" {{ block.shopify_attributes }}>
              {{ block.settings.heading | escape }}
            </h1>
          {%- when 'text' -%}
            <p class="hero-carousel__text" {{ block.shopify_attributes }}>
              {{ block.settings.text | escape }}
            </p>
          {%- when 'button' -%}
            {%- if block.settings.button_label != blank -%}
              <a
                href="{{ block.settings.button_link }}"
                class="button hero-carousel__button"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.button_label | escape }}
              </a>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor %}
    </div>
  </div>

  {%- assign collection_slides = section.blocks | where: 'type', 'collection_slide' -%}
  {%- if collection_slides.size > 0 -%}
    <div class="hero-carousel__nav-wrapper page-width">
      <div class="hero-carousel__nav">
        <button type="button" class="hero-carousel__arrow hero-carousel__arrow--prev" aria-label="Previous slide">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 8 12" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 11L1 6L7 1"/></svg>
        </button>
        <div class="hero-carousel__titles">
          {%- for block in collection_slides -%}
            {%- assign collection = block.settings.collection -%}
            <a
              href="{{ collection.url }}"
              class="hero-carousel__title-link {% if forloop.first %}is-active{% endif %}"
              data-collection-handle="{{ collection.handle }}"
              {{ block.shopify_attributes }}
            >
              {{ collection.title }}
            </a>
          {%- endfor -%}
        </div>
        <button type="button" class="hero-carousel__arrow hero-carousel__arrow--next" aria-label="Next slide">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 8 12" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 11L7 6L1 1"/></svg>
        </button>
      </div>
    </div>
  {%- endif -%}
</div>

<script>
  class HeroCarousel {
    constructor(section) {
      this.section = section;
      this.links = this.section.querySelectorAll('.hero-carousel__title-link');
      this.images = this.section.querySelectorAll('.hero-carousel__media-image');
      this.prevButton = this.section.querySelector('.hero-carousel__arrow--prev');
      this.nextButton = this.section.querySelector('.hero-carousel__arrow--next');
      this.currentIndex = 0;

      if (this.links.length < 2) {
        this.prevButton.style.display = 'none';
        this.nextButton.style.display = 'none';
        return;
      };

      this.prevButton.addEventListener('click', this.prev.bind(this));
      this.nextButton.addEventListener('click', this.next.bind(this));
      this.links.forEach((link, index) => {
        link.addEventListener('mouseover', () => this.goTo(index));
      });
    }

    goTo(index) {
      if (index === this.currentIndex) return;

      this.links[this.currentIndex].classList.remove('is-active');
      this.images[this.currentIndex].classList.remove('is-active');

      this.links[index].classList.add('is-active');
      this.images[index].classList.add('is-active');

      this.currentIndex = index;
    }

    next() {
      const newIndex = (this.currentIndex + 1) % this.links.length;
      this.goTo(newIndex);
    }

    prev() {
      const newIndex = (this.currentIndex - 1 + this.links.length) % this.links.length;
      this.goTo(newIndex);
    }
  }

  const heroCarouselSection = document.getElementById('Hero-{{ section.id }}');
  if (heroCarouselSection) {
    new HeroCarousel(heroCarouselSection);
  }
</script>

{% stylesheet %}
  .hero-carousel-section {
    position: relative;
    min-height: 600px;
    height: 90vh;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    color: #000;
    overflow: hidden;
  }

  .hero-carousel__media-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    background-color: #f0f0f0;
  }

  .hero-carousel__media-container::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(to right, rgba(255,255,255,0.3), rgba(255,255,255,0));
  }

  .hero-carousel__media-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    opacity: 0;
    transition: opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    position: absolute;
    top: 0;
    left: 0;
  }

  .hero-carousel__media-image.is-active {
    opacity: 1;
    z-index: 2;
  }
  
  .hero-carousel__media-image .placeholder-svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-carousel__content-container {
    position: relative;
    z-index: 3;
    width: 100%;
  }

  .hero-carousel__content-inner {
    max-width: 550px;
    text-align: left;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .hero-carousel__subheading {
    font-size: 1rem;
    margin: 0;
    letter-spacing: 0.05em;
  }

  .hero-carousel__heading {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 500;
    line-height: 1.1;
    margin: 0;
  }

  .hero-carousel__text {
    margin: 0;
    font-size: 1rem;
    max-width: 400px;
  }

  .hero-carousel__button {
    background-color: transparent;
    border: 1px solid #000;
    color: #000;
    padding: 12px 28px;
    text-decoration: none;
    transition: background-color 0.3s, color 0.3s;
    margin-top: 1rem;
    font-size: 0.9rem;
  }

  .hero-carousel__button:hover {
    background-color: #000;
    color: #fff;
  }

  .hero-carousel__nav-wrapper {
    position: absolute;
    bottom: 2.5rem;
    right: 0;
    z-index: 4;
    display: flex;
    justify-content: flex-end;
  }

  .hero-carousel__nav {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .hero-carousel__titles {
    display: flex;
    gap: 1.5rem;
  }

  .hero-carousel__title-link {
    color: #000;
    text-decoration: none;
    font-size: 1rem;
    opacity: 0.6;
    position: relative;
    transition: opacity 0.3s;
    padding-bottom: 5px;
  }

  .hero-carousel__title-link:hover,
  .hero-carousel__title-link.is-active {
    opacity: 1;
  }

  .hero-carousel__title-link.is-active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: #000;
  }

  .hero-carousel__arrow {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    color: #000;
    width: 10px;
    height: 10px;
    opacity: 0.7;
    transition: opacity 0.3s;
  }
  .hero-carousel__arrow:hover {
    opacity: 1;
  }

  @media screen and (max-width: 768px) {
    .hero-carousel-section {
      height: 80vh;
      align-items: flex-end;
      color: #fff;
    }
    .hero-carousel__media-container::after {
       background: linear-gradient(to top, rgba(0,0,0,0.6), rgba(0,0,0,0) 50%);
    }
    .hero-carousel__content-inner {
      text-align: center;
      margin: 0 auto;
      align-items: center;
      padding-bottom: 8rem; /* Make space for nav */
    }
    .hero-carousel__button, .hero-carousel__button:hover {
      border-color: #fff;
      color: #fff;
    }
    .hero-carousel__button:hover {
      background-color: #fff;
      color: #000;
    }
    .hero-carousel__nav-wrapper {
      bottom: 1.5rem;
      left: 0;
      width: 100%;
      justify-content: center;
    }
     .hero-carousel__nav {
      color: #fff;
      width: calc(100% - 2rem);
      justify-content: space-between;
      background: rgba(0, 0, 0, 0.2);
      backdrop-filter: blur(5px);
      padding: 0.5rem 1rem;
      border-radius: 50px;
    }
    .hero-carousel__arrow, .hero-carousel__title-link {
      color: #fff;
    }
    .hero-carousel__title-link.is-active::after {
      background-color: #fff;
    }
  }
{% endstylesheet %}

