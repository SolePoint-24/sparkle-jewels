{% comment %}
  Section: Custom Breadcrumbs
  Renders a dynamic breadcrumb navigation trail.
  Add this section to the top of your page templates.
{% endcomment %}

{%- liquid
  assign show_breadcrumbs = true
  if template.name == 'index' or template.name == 'cart'
    assign show_breadcrumbs = false
  endif
-%}

{%- if show_breadcrumbs -%}
  <section class="breadcrumb-section">
    <nav class="breadcrumbs page-width" aria-label="breadcrumbs">
      <a href="/" title="Home">Home</a>
      <span class="separator">&gt;</span>

      {%- case template.name -%}
        {%- when 'page' -%}
          <strong>{{ page.title }}</strong>

        {%- when 'product' -%}
          {%- if product.collections.first -%}
            <a href="{{ product.collections.first.url }}">{{ product.collections.first.title }}</a>
            <span class="separator">&gt;</span>
          {%- endif -%}
          <strong>{{ product.title }}</strong>

        {%- when 'collection' and collection.handle != 'all' -%}
          <strong>{{ collection.title }}</strong>

        {%- when 'blog' -%}
          <strong>{{ blog.title }}</strong>

        {%- when 'article' -%}
          <a href="{{ blog.url }}">{{ blog.title }}</a>
          <span class="separator">&gt;</span>
          <strong>{{ article.title }}</strong>
        
        {%- when 'list-collections' -%}
           <strong>Collections</strong>

        {%- else -%}
          <strong>{{ page_title }}</strong>

      {%- endcase -%}
    </nav>
  </section>
{%- endif -%}

<style>
  .breadcrumb-section {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    font-size: {{ section.settings.font_size }}px;
    text-align: {{ section.settings.alignment }};
  }
  .breadcrumbs {
    color: #555;
    max-width: 1200px; /* --- ADDED --- Constrains the width */
    margin: 0 auto;    /* --- ADDED --- Centers the container */
    padding: 0 20px;    /* --- ADDED --- Adds some side padding */
  }
  .breadcrumbs a {
    color: #555;
    text-decoration: none;
  }
  .breadcrumbs a:hover {
    text-decoration: underline;
  }
  .breadcrumbs span.separator {
    margin: 0 8px;
    color: #999;
  }
  .breadcrumbs strong {
    font-weight: 500;
  }
</style>

{% schema %}
{
  "name": "Custom Breadcrumbs",
  "tag": "section",
  "class": "breadcrumb-wrapper",
  "settings": [
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Font Size",
      "default": 14
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Top Padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Custom Breadcrumbs"
    }
  ]
}
{% endschema %}