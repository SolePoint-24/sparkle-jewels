
{%- style -%}
/* --- Custom Footer Section --- */



.footer {
  background-color: var(--color-background);
  color: var(--color-foreground);
  display:flex;
  flex-direction: column;
}

.footer__container {
  display: flex;
  flex-direction: column;
  gap: 40px;
  padding: 0 20px;
}

.footer__left {
  display: flex;
  flex-direction: column;
  gap: 20px;
  text-align: center;
  align-items:center;
  justify-content:center;
}

.footer__logo img {
  max-width: 150px;
  height: auto;
  margin: 0 auto;
}

.footer__description {
  font-size: 1.2rem;
  margin: 0;
  max-width: 376px;

}

.footer__description p {
  margin: 0;
}

.footer__social-icons {
  display: flex;
  justify-content: center;
  gap: 1.5rem;
}

.social-icon__link {
  color: var(--color-foreground);
  transition: transform 0.2s ease-in-out;
}

.social-icon__link:hover {
  transform: scale(1.1);
  color: var(--color-foreground); /* Ensure hover color is consistent */
}

.social-icon__link svg {
  width: 24px;
  height: 24px;
  fill: transparent; /* SVGs are designed with stroke, not fill */
  stroke: currentColor;
}

.footer__right {
  display: flex;
  flex-direction: column;
  gap: 30px;
  text-align: center;
}

.footer__menu-title {
  font-size: 2rem;
  font-weight: 600;
  margin: 0 0 15px 0;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.footer__menu-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer__menu-list a {
  text-decoration: none;
  color: inherit;
  font-size: 0.8rem;
  transition: text-decoration 0.2s ease-in-out;
}

.footer__menu-list a:hover {
  text-decoration: underline;
} 

.copyright-banner {
  display: flex;
  justify-content: space-between; 
  align-items: center;
  border-top: 1px solid #0c1c4f;
  padding: 15px;
  margin-top: 20px;
  text-align: left;
}

.copyright p {
  margin: 0;
  font-size: 1rem;
  color: var(--color-foreground);
}

.dev-banner p {
  margin: 0;
  font-size: 1rem;
  color: var(--color-foreground);
}
.dev-banner a {
  text-decoration: none;
}

/* Accordion styles */
.footer__accordion-toggle {
  width: 100%;
  background: none;
  border: none;
  color: inherit;
  text-align: left;
  font-size: 1rem;
  font-weight: 600;
  padding: 10px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
}

.accordion-icon {
  transition: transform 0.3s ease;
}

.footer__accordion-toggle[aria-expanded="true"] .accordion-icon {
  transform: rotate(45deg); /* turns + into x */
}

/* Desktop override – always show menus */
@media screen and (min-width: 750px) {
  .footer__accordion-toggle {
    cursor: default;
  }
  .footer__accordion-toggle .accordion-icon {
    display: none;
  }
  .footer__menu-list {
    display: block !important;
  }
}


/* --- Responsive Styles: Tablet and Up --- */
@media screen and (min-width: 750px) {
  .footer__container {
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    gap: 50px;
  }

  .footer__left {
    flex: 1;
    text-align: left;
  }

  .footer__logo img {
    margin: 0;
  }
  
  .footer__social-icons {
    justify-content: flex-start;
  }

  .footer__right {
    flex: 2;
    flex-direction: row;
    justify-content: space-around;
    text-align: left;
    gap: 40px;
  }
}

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 1.5 | round }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 1.5 | round }}px;
    }
  }
  @media(max-width: 768px) {
      .copyright-banner {
    display: flex;
    flex-direction: column;
    justify-content: center; 
    align-items: center;
    border-top: 1px solid #0c1c4f;
    padding: 15px;
    margin-top: 20px;
    text-align: left;
    }
    .copyright p {
      margin: 0;
      font-size: 1rem;
      color: var(--color-foreground);
    }

  .dev-banner p {
    margin: 0;
    font-size: 1.2rem;
    color: var(--color-foreground);
  }
  }
{%- endstyle -%}

<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width footer__container">
    <div class="footer__left">
      {%- if section.settings.logo != blank -%}
        <div class="footer__logo">
          <a href="{{ routes.root_url }}">
            <img
              src="{{ section.settings.logo | image_url: width: 200 }}"
              alt="{{ section.settings.logo.alt | default: shop.name | escape }}"
              width="150"
              height="{{ 150 | divided_by: section.settings.logo.aspect_ratio | round }}"
              loading="lazy"
            >
          </a>
        </div>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <div class="footer__description rte">
          {{ section.settings.description }}
        </div>
      {%- endif -%}

      <div class="footer__social-icons">
        {%- if section.settings.facebook_url != blank -%}
          <a href="{{ section.settings.facebook_url }}" class="social-icon__link" target="_blank" aria-label="Facebook">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
          </a>
        {%- endif -%}
        {%- if section.settings.instagram_url != blank -%}
          <a href="{{ section.settings.instagram_url }}" class="social-icon__link" target="_blank" aria-label="Instagram">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
          </a>
        {%- endif -%}
      </div>
    </div>

    {%- comment -%}
      NEW MENU LOGIC STARTS HERE
      This section now gets the menu from a single setting and loops through its
      top-level links to create columns. The nested links become the list items.
    {%- endcomment -%}
    {%- assign footer_menu = linklists[section.settings.footer_menu] -%}
    {%- if footer_menu.links.size > 0 -%}
     <div class="footer__right">
        {%- for link in footer_menu.links -%}
          <div class="footer__menu-column">
            <button class="footer__accordion-toggle" aria-expanded="false">
              {{ link.title | escape }}
              <span class="accordion-icon">+</span>
            </button>
            {%- if link.links.size > 0 -%}
              <ul class="footer__menu-list" hidden>
                {%- for child_link in link.links -%}
                  <li>
                    <a href="{{ child_link.url }}">{{ child_link.title | escape }}</a>
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>

    {%- endif -%}
    {%- comment -%}
      NEW MENU LOGIC ENDS HERE
    {%- endcomment -%}
  </div>
  <div class="copyright-banner">
    <div class="copyright">
      © {{ 'now' | date: "%Y" }} Sparkle Jewels
    </div>
    <div class="dev-banner">
      <p>Developed And Managed By <a href="https://solepoint.in/">SolePoint Tech Solutions</a></p>
    </div>
     
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const accordions = document.querySelectorAll(".footer__accordion-toggle");

      accordions.forEach((btn) => {
        btn.addEventListener("click", () => {
          const expanded = btn.getAttribute("aria-expanded") === "true";
          btn.setAttribute("aria-expanded", !expanded);

          const list = btn.nextElementSibling;
          if (list) {
            if (expanded) {
              list.hidden = true;
            } else {
              list.hidden = false;
            }
          }
        });
      });
    });
  </script>

</footer>

