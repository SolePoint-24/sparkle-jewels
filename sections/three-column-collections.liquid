{% comment %}
  Section: Three Column Collections
  - Displays 3 collections with custom images, titles, descriptions, and buttons.
  - Custom data pulled from collection metafields or falls back to defaults.
{% endcomment %}

<div class="section-three-column-collections section color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <div class="three-column-collections__grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'collection_item' -%}
          {%- assign collection = block.settings.collection -%}

          {%- if collection != blank -%}
            {%- liquid
              assign custom_image = collection.metafields.custom.custom_image.value
              assign custom_title = collection.metafields.custom.custom_title.value | default: collection.title
              assign custom_description = collection.metafields.custom.custom_description.value | default: collection.description | strip_html | truncatewords: 20
              assign image = custom_image | default: collection.featured_image | default: collection.products.first.featured_image
            -%}

            <div class="three-column-collections__item" {{ block.shopify_attributes }}>
              <div class="three-column-collections__image-wrapper">
                {%- if image != blank -%}
                  <img
                    src="{{ image | image_url: width: 700 }}"
                    alt="{{ image.alt | escape }}"
                    loading="lazy"
                    width="{{ image.width }}"
                    height="{{ image.height }}"
                  >
                {%- else -%}
                  {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </div>
              <div class="three-column-collections__content">
                <h3 class="three-column-collections__title">{{ custom_title }}</h3>
                {%- if custom_description != blank -%}
                  <p class="three-column-collections__description">{{ custom_description }}</p>
                {%- endif -%}
                <a href="{{ collection.url }}" class="three-column-collections__button">
                  Shop {{ collection.title }}
                </a>
              </div>
            </div>
          {%- else -%}
            <div class="three-column-collections__item placeholder-item" {{ block.shopify_attributes }}>
              <div class="three-column-collections__image-wrapper">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
              <div class="three-column-collections__content">
                <h3 class="three-column-collections__title">Collection Title</h3>
                <p class="three-column-collections__description">Curate your collection description here.</p>
                <span class="three-column-collections__button">Shop Collection</span>
              </div>
            </div>
          {%- endif -%}
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .section-three-column-collections {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: var(--color-background); /* Or set a specific color */
  }

  .three-column-collections__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
  }

  @media screen and (min-width: 750px) {
    .three-column-collections__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 30px;
    }
  }

  .three-column-collections__item {
    position: relative;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    color: var(--color-foreground); /* Ensure text color is readable */
  }

  .three-column-collections__image-wrapper {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 120%; /* For portrait aspect ratio like in image */
    overflow: hidden;
    border-radius: var(--media-radius); /* Use theme's border radius */
  }

  .three-column-collections__image-wrapper img,
  .three-column-collections__image-wrapper .placeholder-svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .three-column-collections__item:hover .three-column-collections__image-wrapper img {
    transform: scale(1.05);
  }

  .three-column-collections__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 30px 25px;
    background: rgba(255, 255, 255, 0.8); /* Semi-transparent white overlay */
    text-align: center;
    transform: translateY(0); /* Start visible */
    transition: transform 0.4s ease;
    border-top: 1px solid rgba(0,0,0,0.1);
  }

  .three-column-collections__item:hover .three-column-collections__content {
    /* No change on hover for the content overlay as per image */
  }

  .three-column-collections__title {
    font-size: 1.8rem;
    line-height: 1.2;
    margin-bottom: 10px;
    font-family: 'Times New Roman', Times, serif; /* Elegant font */
    font-weight: 500;
  }

  .three-column-collections__description {
    font-size: 0.95rem;
    line-height: 1.5;
    color: #666;
    margin-bottom: 20px;
  }

  .three-column-collections__button {
    display: inline-block;
    padding: 12px 25px;
    background-color: #333; /* Dark button background */
    color: #fff;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 2px;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .three-column-collections__button:hover {
    background-color: #555; /* Slightly lighter on hover */
    color: #fff;
  }
</style>

{% schema %}
{
  "name": "Three Column Collections",
  "tag": "section",
  "max_blocks": 3,
  "settings": [
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Top Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 40
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme"
    }
  ],
  "blocks": [
    {
      "type": "collection_item",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "paragraph",
          "content": "Custom Image, Title, and Description are set in the Collection's Metafields. If not set, it will use the collection's default details."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Three Column Collections",
      "blocks": [
        {
          "type": "collection_item"
        },
        {
          "type": "collection_item"
        },
        {
          "type": "collection_item"
        }
      ]
    }
  ]
}
{% endschema %}