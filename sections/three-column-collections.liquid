{% comment %}
  Section: Three Column Collections
  - Displays 3 collections with overlayed custom titles, descriptions, and buttons.
  - Image and text content sourced from collection defaults.
{% endcomment %}

<div class="section-three-column-collections section color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <div class="three-column-collections__grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'collection_item' -%}
          {%- assign collection = block.settings.collection -%}

          {%- if collection != blank -%}
            {%- liquid
              assign custom_title = collection.metafields.custom.product_page_collection_title | default: collection.title
              assign custom_description = collection.metafields.custom.product_page_collection_description | default: collection.description | strip_html | truncatewords: 20
              assign image = collection.featured_image | default: collection.products.first.featured_image
            -%}

            <div class="three-column-collections__item" {{ block.shopify_attributes }}>
              <a href="{{ collection.url }}" class="three-column-collections__link">
                <div class="three-column-collections__image-wrapper">
                  {%- if image != blank -%}
                    <img
                      src="{{ image | image_url: width: 700 }}"
                      alt="{{ image.alt | escape }}"
                      loading="lazy"
                      width="{{ image.width }}"
                      height="{{ image.height }}"
                    >
                  {%- else -%}
                    {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                </div>
                <div class="three-column-collections__content-overlay">
                  <h3 class="three-column-collections__title">{{ title }}</h3>
                  {%- if description != blank -%}
                    <p class="three-column-collections__description">{{ description }}</p>
                  {%- endif -%}
                  <span class="three-column-collections__button">
                    Shop {{ collection.title }}
                  </span>
                </div>
              </a>
            </div>
          {%- else -%}
            <div class="three-column-collections__item placeholder-item" {{ block.shopify_attributes }}>
              <a href="#" class="three-column-collections__link">
                <div class="three-column-collections__image-wrapper">
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
                <div class="three-column-collections__content-overlay">
                  <h3 class="three-column-collections__title">Collection Title</h3>
                  <p class="three-column-collections__description">Select a collection to display its details.</p>
                  <span class="three-column-collections__button">Shop Collection</span>
                </div>
              </a>
            </div>
          {%- endif -%}
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .section-three-column-collections {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .three-column-collections__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
  }

  @media screen and (min-width: 750px) {
    .three-column-collections__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 30px;
    }
  }

  .three-column-collections__item {
    position: relative; /* Needed for positioning the overlay */
    overflow: hidden; /* Ensures rounded corners apply to image too */
    border-radius: var(--media-radius, 4px); /* Apply border-radius here */
  }

  .three-column-collections__link {
    display: block; /* Make the whole item clickable */
    text-decoration: none;
    color: inherit; /* Inherit color from parent for text, adjusted by overlay */
  }

  .three-column-collections__image-wrapper {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 120%; /* Portrait aspect ratio as in image */
    overflow: hidden;
  }

  .three-column-collections__image-wrapper img,
  .three-column-collections__image-wrapper .placeholder-svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .three-column-collections__item:hover .three-column-collections__image-wrapper img {
    transform: scale(1.05);
  }

  .three-column-collections__content-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%); /* Center horizontally and vertically */
    width: calc(100% - 60px); /* 30px padding on each side */
    padding: 30px;
    background: rgba(255, 255, 255, 0.75); /* Semi-transparent white background */
    text-align: center;
    border: 1px solid rgba(0, 0, 0, 0.1); /* Subtle border */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05); /* Soft shadow */
    pointer-events: none; /* Allows clicks to pass through to the main link */
  }
  
  .three-column-collections__title {
    font-size: 1.8rem;
    line-height: 1.2;
    margin: 0 0 10px 0;
    font-family: 'Times New Roman', Times, serif; /* Elegant font */
    font-weight: 500;
    color: #333; /* Darker title text */
  }

  .three-column-collections__description {
    font-size: 0.9rem;
    line-height: 1.5;
    color: #666;
    margin: 0 0 20px 0;
  }

  .three-column-collections__button {
    display: inline-block;
    padding: 12px 25px;
    background-color: #333; /* Dark button background */
    color: #fff;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 2px;
    transition: background-color 0.3s ease, color 0.3s ease;
    cursor: pointer; /* Ensure cursor shows it's clickable, even with pointer-events:none on parent */
  }

  .three-column-collections__button:hover {
    background-color: #555; /* Slightly lighter on hover */
    color: #fff;
  }
</style>

{% schema %}
{
  "name": "Three Column Collections",
  "tag": "section",
  "max_blocks": 3,
  "settings": [
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Top Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 40
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme"
    }
  ],
  "blocks": [
    {
      "type": "collection_item",
      "name": "Collection",
      "limit": 3,
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Three Column Collections",
      "blocks": [
        {
          "type": "collection_item"
        },
        {
          "type": "collection_item"
        },
        {
          "type": "collection_item"
        }
      ]
    }
  ]
}
{% endschema %}