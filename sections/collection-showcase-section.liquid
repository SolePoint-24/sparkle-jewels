{% comment %}
  This section is designed to be a self-contained showcase,
  featuring a promotional block and a product slider,
  now using the 'product-card-custom.liquid' snippet.
{% endcomment %}

{%- liquid
  assign collection = collections[section.settings.collection]
  assign products_to_show = section.settings.products_to_show
  
  assign products_per_view = section.settings.products_per_view
  assign products_to_slide = section.settings.products_to_slide
-%}

<style>
  #shopify-section-{{ section.id }} {
    --products-per-view: {{ products_per_view }};
    --products-gap: 20px;
  }

  #shopify-section-{{ section.id }} .custom-showcase-section {
    padding: 50px 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
  }

  #shopify-section-{{ section.id }} .custom-showcase-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  #shopify-section-{{ section.id }} .custom-showcase-header {
    text-align: left;
    margin-bottom: 30px;
  }

  #shopify-section-{{ section.id }} .custom-showcase-header .subtitle {
    font-size: 14px;
    color: #555;
    margin-bottom: 8px;
    letter-spacing: 0.5px;
  }

  #shopify-section-{{ section.id }} .custom-showcase-header .title {
    font-size: 32px;
    font-weight: 500;
    color: #121212;
    margin: 0;
  }

  #shopify-section-{{ section.id }} .custom-showcase-content {
    display: grid;
    grid-template-columns: 1fr 2.5fr;
    gap: 25px;
  }

  #shopify-section-{{ section.id }} .custom-showcase-promo-block {
    background-color: #f5f5f5;
    background-size: cover;
    background-position: center;
    min-height: 450px;
    display: flex;
    flex-direction: column;
    justify-content: start;
    padding: 40px;
    box-sizing: border-box;
  }

  #shopify-section-{{ section.id }} .custom-showcase-promo-block .promo-subtitle {
    font-size: 12px;
    letter-spacing: 1px;
    color: #333;
    margin: 0 0 10px 0;
  }
  
  #shopify-section-{{ section.id }} .custom-showcase-promo-block .promo-title {
    font-size: 28px;
    font-weight: 500;
    color: #121212;
    line-height: 1.2;
    margin: 0 0 20px 0;
  }

  #shopify-section-{{ section.id }} .custom-showcase-promo-block .promo-link {
    font-size: 14px;
    color: #121212;
    text-decoration: none;
    padding-bottom: 3px;
    border-bottom: 1px solid #121212;
    align-self: flex-start;
    transition: opacity 0.3s ease;
  }

  #shopify-section-{{ section.id }} .custom-showcase-promo-block .promo-link:hover {
    opacity: 0.7;
  }

  #shopify-section-{{ section.id }} .custom-showcase-slider-wrapper {
    position: relative;
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .custom-showcase-slider {
    display: flex;
    overflow-x: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scroll-snap-type: x mandatory;
    padding-bottom: 20px;
    margin-bottom: -20px;
    gap: var(--products-gap);
  }

  #shopify-section-{{ section.id }} .custom-showcase-slider::-webkit-scrollbar {
    display: none;
  }
  #shopify-section-{{ section.id }} .custom-showcase-slider {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  #shopify-section-{{ section.id }} .slider-product-card-wrapper {
    flex: 0 0 calc((100% - (var(--products-per-view) - 1) * var(--products-gap)) / var(--products-per-view));
    scroll-snap-align: start;
  }
  
  #shopify-section-{{ section.id }} .slider {
    display: flex;
    align-items: stretch;
  }

  #shopify-section-{{ section.id }} .slider-product-card-wrapper {
    display: flex;
    flex: 1;
  }

  #shopify-section-{{ section.id }} .slider-product-card-wrapper .card-wrapper,
  #shopify-section-{{ section.id }} .slider-product-card-wrapper .card {
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 100%;
  }

  #shopify-section-{{ section.id }} .slider-nav {
    position: absolute;
    top: 40%;
    transform: translateY(-50%);
    z-index: 10;
    background: #fff;
    border: 1px solid #e5e5e5;
    width: 35px;
    height: 35px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s;
  }
  #shopify-section-{{ section.id }} .slider-nav:hover {
    background-color: #f5f5f5;
  }

  #shopify-section-{{ section.id }} .slider-nav.prev {
    right: 45px;
  }
  
  #shopify-section-{{ section.id }} .slider-nav.next {
    right: 5px;
  }

  @media (max-width: 990px) {
    #shopify-section-{{ section.id }} .custom-showcase-content {
      grid-template-columns: 1fr;
    }
    #shopify-section-{{ section.id }} .slider-product-card-wrapper {
      flex-basis: calc(50% - 10px);
    }
    #shopify-section-{{ section.id }} .slider-nav {
      display: none;
    }
  }

  @media (max-width: 500px) {
    #shopify-section-{{ section.id }} .custom-showcase-header .title {
      font-size: 26px;
    }
    #shopify-section-{{ section.id }} .slider-product-card-wrapper {
      flex-basis: 80%;
    }
  }
</style>

<div class="custom-showcase-section">
  <div class="custom-showcase-container">
    <div class="custom-showcase-header">
      {% if section.settings.subtitle != blank %}
        <p class="subtitle">{{ section.settings.subtitle | escape }}</p>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="title">{{ section.settings.heading | escape }}</h2>
      {% endif %}
    </div>

    <div class="custom-showcase-content">
      <div 
        class="custom-showcase-promo-block"
        {% if section.settings.promo_image %}
          style="background-image: url('{{ section.settings.promo_image | image_url: width: 800 }}');"
        {% endif %}
      >
        {% if section.settings.promo_subtitle != blank %}
          <h4 class="promo-subtitle">{{ section.settings.promo_subtitle | escape }}</h4>
        {% endif %}
        {% if section.settings.promo_title != blank %}
          <h3 class="promo-title">{{ section.settings.promo_title | replace: '|', '<br>' }}</h3>
        {% endif %}
        {% if section.settings.promo_button_text != blank and section.settings.promo_button_link != blank %}
          <a href="{{ section.settings.promo_button_link }}" class="promo-link">
            {{ section.settings.promo_button_text | escape }}
          </a>
        {% endif %}
      </div>

      <div class="custom-showcase-slider-wrapper">
        <div class="custom-showcase-slider" id="slider-{{ section.id }}" data-products-to-slide="{{ products_to_slide }}">
          {%- if collection.products.size > 0 -%}
            {%- for product in collection.products limit: products_to_show -%}
              <div class="slider-product-card-wrapper">
                {% render 'custom-product-card', product: product, section_id: section.id %}
              </div>
            {%- endfor -%}
          {%- else -%}
            {%- for i in (1..products_per_view) -%}
              <div class="slider-product-card-wrapper">
                <div class="card-wrapper placeholder">
                  <div class="card card--card">
                    <div class="card__inner ratio" style="--ratio-percent: 125%;">
                      {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                    <div class="card__content">
                      <div class="card__information">
                        <h3 class="card__heading">
                          Example Product Title
                        </h3>
                        <div class="card_price_bottom">
                          <span class="price-item">{{ 9900 | money }}</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {%- endfor -%}
          {%- endif -%}
        </div>

        {% if collection.products.size > products_per_view %}
        <button class="slider-nav prev" aria-label="Previous slide" onclick="showcaseSliderScroll('slider-{{ section.id }}', -1)">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/></svg>
        </button>
        <button class="slider-nav next" aria-label="Next slide" onclick="showcaseSliderScroll('slider-{{ section.id }}', 1)">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/></svg>
        </button>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<script>
  function showcaseSliderScroll(sliderId, direction) {
    const slider = document.getElementById(sliderId);
    if (!slider) return;

    const productsToSlide = parseInt(slider.dataset.productsToSlide, 10) || 1;
    const firstCard = slider.querySelector('.slider-product-card-wrapper');
    if (!firstCard) return;

    const sliderGap = parseFloat(getComputedStyle(slider).gap) || 0;
    const scrollAmount = (firstCard.offsetWidth + sliderGap) * productsToSlide;

    slider.scrollBy({
      left: scrollAmount * direction,
      behavior: 'smooth'
    });
  }
</script>

{% schema %}
{
  "name": "Collection Showcase",
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Latest Treasures"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Unveil The New Era Of Glamour"
    },
    {
      "type": "header",
      "content": "Promotional Block"
    },
    {
      "type": "image_picker",
      "id": "promo_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "promo_subtitle",
      "label": "Promo Subtitle",
      "default": "TIMELESS RADIANCE"
    },
    {
      "type": "text",
      "id": "promo_title",
      "label": "Promo Title",
      "info": "Use '|' to create a line break.",
      "default": "Meets|Brilliance"
    },
    {
      "type": "text",
      "id": "promo_button_text",
      "label": "Button Text",
      "default": "Discover Now"
    },
    {
      "type": "url",
      "id": "promo_button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Product Slider"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "products_per_view",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "Products per view (Desktop)",
      "default": 4
    },
    {
      "type": "range",
      "id": "products_to_slide",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Products to slide",
      "info": "The number of products to scroll when navigation is clicked.",
      "default": 1
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 12,
      "step": 1,
      "label": "Total number of products to show",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Custom Collection Showcase"
    }
  ]
}
{% endschema %}