{% comment %}
  V6: Updated styles to match the new reference image and theme CSS.
  - Uses CSS variables from the theme for consistent borders and radiuses.
  - Date overlay is now a pill/capsule shape.
  - Image corners and button are now rounded.
{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .custom-blog__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
  }

  .custom-blog__subheading {
    font-size: 0.9rem;
    color: #555;
    margin: 0;
    font-family: var(--font-body-family);
  }

  .custom-blog__heading {
    font-size: 2.5rem;
    margin: 0;
    font-family: var(--font-heading-family);
    font-weight: var(--font-heading-weight);
  }

  .custom-blog__view-all {
    border: 1px solid #ccc;
    padding: 10px 20px;
    text-decoration: none;
    color: #333;
    transition: background-color 0.3s, color 0.3s;
    white-space: nowrap;
  }

  .custom-blog__view-all:hover {
    background-color: #333;
    color: #fff;
    border-color: #333;
  }

  .custom-blog__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
  }

  /* --- NEW STYLES START HERE --- */
  .custom-blog-card {
    display: flex;
    flex-direction: column;
    text-align: left;
    /* Using theme variables for border and radius for consistency */
    border: var(--border-width, 1px) solid rgba(var(--color-foreground), var(--border-opacity, 0.1));
    border-radius: var(--border-radius, 8px);
    overflow: hidden; /* Ensures child elements respect the rounded corners */
    background-color: rgb(var(--color-background));
  }

  .custom-blog-card__image-wrapper {
    position: relative;
    overflow: hidden;
  }

  .custom-blog-card__image-wrapper a {
    display: block;
  }

  .custom-blog-card__image {
    width: 100%;
    height: auto;
    aspect-ratio: 1.25/1; /* Adjusted aspect ratio to better match image */
    object-fit: cover;
    transition: transform 0.4s ease;
    display: block;
  }
  
  .custom-blog-card:hover .custom-blog-card__image {
    transform: scale(1.05);
  }

  .custom-blog-card__date {
    position: absolute;
    bottom: 15px;
    left: 15px;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 6px 14px;
    font-size: 0.8rem;
    /* Making it a pill shape */
    border-radius: 50px;
    color: #333;
    line-height: 1;
  }

  .custom-blog-card__content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    padding: 20px;
  }
  
  .custom-blog-card__title {
    font-size: 1.1rem;
    margin: 0 0 10px 0;
    font-weight: bold;
    font-family: var(--font-heading-family);
  }

  .custom-blog-card__title a {
    text-decoration: none;
    color: inherit;
  }
  
  .custom-blog-card__title a:hover {
    color: rgb(var(--color-link-hover));
  }

  .custom-blog-card__excerpt {
    font-size: 0.9rem;
    color: #555;
    margin: 0 0 20px 0;
    flex-grow: 1;
  }
  
  .custom-blog-card__read-more {
    display: inline-block;
    border: 1px solid #ccc;
    padding: 10px 20px;
    text-decoration: none;
    color: #333;
    align-self: flex-start;
    /* Adding rounded corners to the button */
    border-radius: var(--buttons-radius-outset, 5px);
  }

  .custom-blog-card__read-more:hover {
    background-color: #333;
    color: #fff;
    border-color: #333;
  }

  /* Responsive Adjustments */
  @media screen and (max-width: 990px) {
    .custom-blog__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .custom-blog__header {
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
    }
    .custom-blog__heading {
      font-size: 2rem;
    }
  }

  @media screen and (max-width: 550px) {
    .custom-blog__grid {
      grid-template-columns: 1fr;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding">
    <div class="page-width">
      <div class="custom-blog__header">
        <div>
          {%- if section.settings.subheading != blank -%}
            <p class="custom-blog__subheading">{{ section.settings.subheading }}</p>
          {%- endif -%}
          {%- if section.settings.heading != blank -%}
            <h2 class="custom-blog__heading">{{ section.settings.heading }}</h2>
          {%- endif -%}
        </div>
        {%- if section.settings.show_view_all and section.settings.button_link != blank -%}
          <a href="{{ section.settings.button_link }}" class="custom-blog__view-all">
            {{ section.settings.button_text | escape }}
          </a>
        {%- endif -%}
      </div>

      <div class="custom-blog__grid">
        {%- for block in section.blocks -%}
          {%- assign article = block.settings.article -%}
          <div class="custom-blog-card" {{ block.shopify_attributes }}>
            {%- if article != blank -%}
              <div class="custom-blog-card__image-wrapper">
                <a href="{{ article.url }}">
                  {%- if article.image -%}
                    <img
                      src="{{ article.image | image_url: width: 500, height: 500, crop: 'center' }}"
                      alt="{{ article.image.alt | escape }}"
                      class="custom-blog-card__image"
                      width="500"
                      height="400"
                      loading="lazy"
                    >
                  {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                </a>
                <div class="custom-blog-card__date">
                  {{ article.published_at | date: "%d %b - %Y" }}
                </div>
              </div>
              <div class="custom-blog-card__content">
                <h3 class="custom-blog-card__title">
                  <a href="{{ article.url }}">{{ article.title | truncate: 50, "..." }}</a>
                </h3>
                {%- if article.excerpt.size > 0 or article.content.size > 0 -%}
                  <p class="custom-blog-card__excerpt">
                    {{ article.excerpt_or_content | strip_html | truncate: 120, "..." }}
                  </p>
                {%- endif -%}
                <a href="{{ article.url }}" class="custom-blog-card__read-more">Read More</a>
              </div>
            {%- else -%}
              <div class="custom-blog-card__image-wrapper">
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
              <div class="custom-blog-card__content">
                  <h3 class="custom-blog-card__title">Blog post</h3>
                  <p class="custom-blog-card__excerpt">Select a blog post to display here.</p>
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
        
        {%- if section.blocks.size == 0 -%}
           <div style="text-align: center; grid-column: 1 / -1;">
             <p>Click "Add blog post" in the sidebar to select which articles to show here.</p>
           </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Latest Thought Blogs",
  "tag": "section",
  "class": "section",
  "max_blocks": 8,
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "default": "Fresh Reads",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "The Latest Thought",
      "label": "Heading"
    },
    {
      "type": "header",
      "content": "View All Button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show 'View All Blogs' button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "View All Blogs"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "article",
      "name": "Blog Post",
      "settings": [
        {
          "type": "article",
          "id": "article",
          "label": "Select Article"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Latest Thought Blogs",
      "blocks": [
        { "type": "article" },
        { "type": "article" },
        { "type": "article" },
        { "type": "article" }
      ]
    }
  ]
}
{% endschema %}