{%- comment -%}
  ** Custom Announcement Bar **
  - Shows rotating announcements and social media links.
  - Fully customizable through the Shopify Theme Editor.
  - Includes settings for colors, autoplay, and content blocks.
{%- endcomment -%}

{%- liquid
  assign section_settings = section.settings
  assign background_color = section_settings.background_color
  assign text_color = section_settings.text_color
  assign arrow_color = section_settings.arrow_color
  assign autoplay = section_settings.autoplay
  assign autoplay_speed = section_settings.autoplay_speed | times: 1000

  assign announcements = section.blocks | where: "type", "announcement"
  assign social_links = section.blocks | where: "type", "social_links"
-%}

<style>
  :root {
    --announcement-bar-bg: {{ background_color }};
    --announcement-bar-text: {{ text_color }};
    --announcement-bar-arrow: {{ arrow_color }};
  }

  .custom-announcement-bar {
    background-color: var(--announcement-bar-bg);
    color: var(--announcement-bar-text);
    padding: 10px 15px;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
    gap: 20px;
  }

  .announcement-carousel-wrapper {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    overflow: hidden;
    position: relative;
    padding: 0 40px; /* Space for arrows */
    flex-grow: 1;
    min-width: 0;
  }

  .announcement-carousel {
    position: relative;
    width: 100%;
    text-align: center;
  }

  .announcement-slide {
    display: none;
    width: 100%;
    animation: fadeEffect 0.5s ease-in-out;
  }

  .announcement-slide.active {
    display: block;
  }

  .announcement-slide a,
  .announcement-slide span {
    color: inherit;
    text-decoration: none;
    font-size: 14px;
    transition: opacity 0.3s ease;
  }
  
  .announcement-slide a:hover {
    opacity: 0.7;
    text-decoration: underline;
  }

  .carousel-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
    z-index: 10;
  }
  
  .carousel-arrow svg {
    width: 16px;
    height: 16px;
    fill: var(--announcement-bar-arrow);
    transition: opacity 0.3s ease;
  }
  
  .carousel-arrow:hover svg {
    opacity: 0.7;
  }

  .prev-arrow {
    left: 5px;
  }

  .next-arrow {
    right: 5px;
  }

  .social-links-wrapper {
    display: flex;
    align-items: center;
    gap: 15px;
    flex-shrink: 0; /* Prevent shrinking */
  }

  .social-link a {
    display: block;
    color: var(--announcement-bar-text);
    transition: opacity 0.3s ease;
  }
  
  .social-link a:hover {
    opacity: 0.7;
  }

  .social-link svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
  }

  @keyframes fadeEffect {
    from { opacity: 0.4; }
    to { opacity: 1; }
  }
  
  /* Mobile Styles */
  @media (max-width: 768px) {
    .custom-announcement-bar {
      padding: 8px 10px;
      gap: 10px;
    }
    
    .announcement-carousel-wrapper {
      padding: 0 35px;
    }

    .social-links-wrapper {
      padding-left: 0;
    }
    
    .announcement-slide a,
    .announcement-slide span {
      font-size: 12px;
    }
  }

</style>

<div class="custom-announcement-bar" data-section-id="{{ section.id }}" data-autoplay="{{ autoplay }}" data-autoplay-speed="{{ autoplay_speed }}">
  {%- if social_links.size > 0 -%}
    <div class="social-links-wrapper">
      {%- for block in social_links -%}
        <div class="social-link" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link | escape }}" target="_blank" rel="noopener" aria-label="Follow us on {{ block.settings.icon | capitalize }}">
            {{- block.settings.icon_svg -}}
          </a>
        </div>
      {%- endfor -%}
    </div>
  {%- endif -%}

  <div class="announcement-carousel-wrapper">
    {%- if announcements.size > 1 -%}
      <button class="carousel-arrow prev-arrow" aria-label="Previous Announcement">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.45 15.55a.75.75 0 0 1-1.06 0L6.44 10.5a.747.747 0 0 1 0-1.06l4.95-5.05a.75.75 0 0 1 1.06 1.06L8.06 10l4.39 4.49a.75.75 0 0 1 0 1.06Z"/></svg>
      </button>
    {%- endif -%}

    <div class="announcement-carousel">
      {%- for block in announcements -%}
        <div class="announcement-slide" {{ block.shopify_attributes }} data-slide-index="{{ forloop.index0 }}">
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}">
              {{ block.settings.text | escape }}
            </a>
          {%- else -%}
            <span>{{ block.settings.text | escape }}</span>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>

    {%- if announcements.size > 1 -%}
      <button class="carousel-arrow next-arrow" aria-label="Next Announcement">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M7.55 4.45a.75.75 0 0 1 1.06 0l4.95 5.05c.293.293.293.767 0 1.06l-4.95 5.05a.75.75 0 0 1-1.06-1.06L11.94 10 7.55 5.51a.75.75 0 0 1 0-1.06Z"/></svg>
      </button>
    {%- endif -%}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.querySelector('.custom-announcement-bar[data-section-id="{{ section.id }}"]');
    if (!section) return;

    const slides = section.querySelectorAll('.announcement-slide');
    if (slides.length <= 1) {
      if(slides.length === 1) slides[0].classList.add('active');
      return;
    }

    const prevButton = section.querySelector('.prev-arrow');
    const nextButton = section.querySelector('.next-arrow');
    const isAutoplay = section.dataset.autoplay === 'true';
    const autoplaySpeed = parseInt(section.dataset.autoplaySpeed, 10);

    let currentSlide = 0;
    let autoplayInterval = null;

    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.classList.remove('active');
        if (i === index) {
          slide.classList.add('active');
        }
      });
    }

    function nextSlide() {
      currentSlide = (currentSlide + 1) % slides.length;
      showSlide(currentSlide);
    }
    
    function prevSlide() {
        currentSlide = (currentSlide - 1 + slides.length) % slides.length;
        showSlide(currentSlide);
    }

    function startAutoplay() {
      if (isAutoplay && !autoplayInterval) {
        autoplayInterval = setInterval(nextSlide, autoplaySpeed);
      }
    }

    function stopAutoplay() {
      clearInterval(autoplayInterval);
      autoplayInterval = null;
    }
    
    prevButton.addEventListener('click', () => {
        prevSlide();
        stopAutoplay();
        startAutoplay(); // Restart timer on manual navigation
    });

    nextButton.addEventListener('click', () => {
        nextSlide();
        stopAutoplay();
        startAutoplay(); // Restart timer on manual navigation
    });
    
    section.addEventListener('mouseenter', stopAutoplay);
    section.addEventListener('mouseleave', startAutoplay);

    showSlide(currentSlide);
    startAutoplay();
  });
</script>

