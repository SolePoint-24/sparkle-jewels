{% comment %}
  ============================================================================
  BLOCK: Price Config (Final Version)
  ============================================================================
{% endcomment %}

{%- if block.settings.show_block -%}
  <variant-value-updater class="price-config-wrapper" data-id="price-breakdown" {{ block.shopify_attributes }}>
    {%- assign metal_weights_list = product.selected_or_first_available_variant.metafields.custom.metal_weights.value -%}
    {%- assign stone_configurations = product.metafields.custom.stone_configuration.value -%}

    {%- assign total_metals_value = 0 -%}
    {%- assign total_stones_value = 0 -%}
    {%- assign total_making_charges = 0 -%}
    <div class="price-breakdown-table">
      <div class="pbt-row pbt-header">
        <div class="pbt-cell">COMPONENT</div>
        <div class="pbt-cell">RATE</div>
        <div class="pbt-cell">WEIGHT</div>
        <div class="pbt-cell pbt-align-right">VALUE</div>
      </div>

      <div class="pbt-row pbt-group-title">
        <div class="pbt-cell">METALS</div>
      </div>

      {% for metal_item in metal_weights_list %}
        {%- assign final_metal_object = metal_item.metal_variant.value -%}
        {% if final_metal_object %}
          {%- assign rate = final_metal_object.pricing | default: 0 -%}
          {%- assign weight = metal_item.metal_weight | default: 0 | times: 1.0 -%}
          {%- assign total_value = rate | times: weight -%}
          {%- assign total_metals_value = total_metals_value | plus: total_value -%}

          {%- assign purity = final_metal_object.purity | default: 100 | times: 1.0 -%}
          {%- assign rate_24k = rate | divided_by: purity | times: 100.0 -%}
          {% comment %} Making Charges {% endcomment %}
          {%- assign labour_category_object = metal_item.labour_category.value -%}
          {%- assign labour_percentage_value = labour_category_object.labour_percentage | default: 0 -%}
          {%- assign labour_percentage = labour_percentage_value | divided_by: 100.0 -%}
          {%- assign metal_labour_cost = weight | times: labour_percentage |times: rate_24k-%}
          {%- assign total_making_charges = total_making_charges | plus: metal_labour_cost -%}

          <div class="pbt-row">
            <div class="pbt-cell" data-label="COMPONENT"><span class="pbt-main-text">{{ final_metal_object.display_name }}</span></div>
            <div class="pbt-cell" data-label="RATE">{{ rate | times: 100 | money }}</div>
            <div class="pbt-cell" data-label="WEIGHT">{{ weight }} g</div>
            <div class="pbt-cell pbt-align-right" data-label="VALUE"><span>{{ total_value | times: 100 | money }}</span></div>
          </div>
        {% endif %}
      {% endfor %}

      {% comment %} --- NEW: Display Total Making Charges --- {% endcomment %}
      <div class="pbt-row pbt-summary-row">
        <div class="pbt-cell" data-label="COMPONENT">Making charges</div>
        <div class="pbt-cell" data-label="RATE">-</div>
        <div class="pbt-cell" data-label="WEIGHT">-</div>
        <div class="pbt-cell pbt-align-right" data-label="VALUE">
          <span>{{ total_making_charges | times: 100 | money }}</span>
        </div>
      </div>

      <div class="pbt-row pbt-group-title">
        <div class="pbt-cell">STONES</div>
      </div>

      {% for stone_item in stone_configurations %}
        {% if stone_item %}
          {%- assign pricing_object = stone_item.stone.value -%}
          {%- assign stone_price_per_carat = pricing_object.pricing | default: 0 -%}
          {%- assign total_weight = stone_item.weight_carat | default: 0 | times: 1.0 -%}
          {%- assign total_stone_value_for_item = total_weight | times: stone_price_per_carat -%}
          {%- assign total_stones_value = total_stones_value | plus: total_stone_value_for_item -%}

          <div class="pbt-row">
            <div class="pbt-cell" data-label="COMPONENT">
              <span class="pbt-main-text">{{ pricing_object.shape_category }} {{ pricing_object.size_category }} {{ pricing_object.type }}</span>
              <span class="pbt-sub-text">x {{ stone_item.number_of_stone }} ({{ stone_item.stone_size }}mm)</span>
            </div>
            <div class="pbt-cell" data-label="RATE">{{ stone_price_per_carat | times: 100 | money }}</div>
            <div class="pbt-cell" data-label="WEIGHT">{{ total_weight }} ct.w</div>
            <div class="pbt-cell pbt-align-right" data-label="VALUE">
              <span>{{ total_stone_value_for_item | times: 100 | money }}</span>
            </div>
          </div>
        {% endif %}
      {% endfor %}

      {%- assign subtotal = total_metals_value | plus: total_stones_value | plus: total_making_charges -%}

      <div class="pbt-row pbt-summary-row">
        <div class="pbt-cell pbt-bold" data-label="COMPONENT">SUBTOTAL</div>
        <div class="pbt-cell" data-label="RATE">-</div>
        <div class="pbt-cell" data-label="WEIGHT">-</div>
        <div class="pbt-cell pbt-align-right" data-label="VALUE">
          <span style="font-size:18px"><strong>{{ subtotal | times: 100 | money }}</strong></span>
        </div>
      </div>
    </div>
  </variant-value-updater>
{%- endif -%}

<script></script>

{% stylesheet %}
  .price-config-wrapper {
    margin-bottom: 20px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
  }

  .price-breakdown-table {
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    overflow: hidden;
    max-width: 600px; /* Constrains the width on desktop */
    margin: 0 auto; /* Centers the table */
  }

  .pbt-row {
    display: flex;
    align-items: stretch; /* Changed from center to stretch */
    border-bottom: 1px solid #e0e0e0;
    padding: 10px 15px;
    background-color: #fff;
  }

  .pbt-row:last-child {
    border-bottom: none;
  }

  .pbt-cell {
    display: flex;
    flex-direction: column;
    justify-content: center; /* Vertically center content */
    flex-basis: 20%;
    padding: 5px;
    color: #555;
    font-size: 14px;
    line-height: 1.4;
  }

  .pbt-cell:first-child {
    flex-basis: 40%;
    padding-left: 0;
  }

  .pbt-cell:last-child {
    padding-right: 0;
  }

  .pbt-align-right {
    align-items: flex-end;
    text-align: right;
  }

  .pbt-header {
    background-color: #f8f8f8;
    color: #333;
    font-weight: 600;
    font-size: 12px;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .pbt-group-title {
    background-color: #fdfaf4;
  }

  .pbt-group-title .pbt-cell {
    color: #d4a356;
    font-weight: 600;
    font-size: 13px;
    letter-spacing: 0.05em;
    flex-basis: 100% !important;
  }

  .pbt-main-text {
    font-size: 15px;
    color: #222;
  }

  .pbt-sub-text {
    font-size: 12px;
    color: #777;
    margin-top: 2px;
  }

  .pbt-summary-row .pbt-cell {
      padding-top: 15px;
      padding-bottom: 15px;
  }

  .pbt-bold {
    font-weight: 600;
  }

  /* --- MOBILE RESPONSIVE STYLES --- */
  @media screen and (max-width: 768px) {
    .price-breakdown-table {
        border-radius: 0;
        border-left: none;
        border-right: none;
    }

    .pbt-header {
      display: none; /* Hide header on mobile */
    }

    .pbt-row {
      flex-direction: column;
      padding: 15px 0;
    }
    
    .pbt-group-title {
        padding: 10px 15px;
    }

    .pbt-cell {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      flex-basis: auto !important; /* Reset flex-basis */
      width: 100%;
      padding: 6px 15px;
      text-align: right;
    }

    .pbt-cell:first-child {
        padding-left: 15px;
    }
    
    .pbt-cell:last-child {
        padding-right: 15px;
    }

    .pbt-cell::before {
      content: attr(data-label);
      font-weight: 600;
      color: #333;
      text-align: left;
      margin-right: 10px;
    }

    .pbt-cell[data-label="COMPONENT"] {
        flex-direction: column;
        align-items: flex-start;
        padding-bottom: 10px;
    }

    .pbt-cell[data-label="COMPONENT"]::before {
        display: none; /* No label needed for the primary info */
    }

    .pbt-align-right {
        align-items: center;
    }
    
    .pbt-summary-row .pbt-cell[data-label="COMPONENT"] {
        flex-direction: row;
        align-items: center;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Price_Configuration",
  "tag": "div",
  "settings": [
    {
      "type": "header",
      "content": "Block Visibility"
    },
    {
      "type": "checkbox",
      "id": "show_block",
      "label": "Show this block",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Price_Configuration",
      "category": "t:categories.custom"
    }
  ]
}
{% endschema %}
