{% comment %}
  ============================================================================
  BLOCK: Price Config
  - A starter block for displaying custom product configurations.
  - Add your specific Liquid logic to fetch and display data.
  ============================================================================
{% endcomment %}

{%- if block.settings.show_block -%}
  <div class="price-config-wrapper" {{ block.shopify_attributes }}>
    {%- if block.settings.title != blank -%}
      <h3 class="price-config-title">{{ block.settings.title }}</h3>
    {%- endif -%}


    <div class="price-config-content">
      <p>This is your new 'Price Config' block. Start adding your custom content here.</p>
      <p>The current product is: <strong>{{ product.title }}</strong></p>
    </div>

  </div>
{%- endif -%}


{% stylesheet %}
  .price-config-wrapper {
    padding: 15px;
    margin-bottom: 20px;
    border: 1px dashed #ccc;
    border-radius: 4px;
  }
  .price-config-title {
    margin-top: 0;
    margin-bottom: 10px;
    font-size: 1.1em;
    font-family: var(--font-heading-family);
    color: var(--color-foreground-heading);
  }
  .price-config-content {
    font-size: 0.95em;
    color: var(--color-foreground);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Price_Configuration",
  "tag": "div",
  "settings": [
    {
      "type": "header",
      "content": "Block Visibility"
    },
    {
      "type": "checkbox",
      "id": "show_block",
      "label": "Show this block",
      "default": true
    },
    {
      "type": "header",
      "content": "Content Settings"
    },

  ],
  "presets": [
    {
      "name": "Price_Configuration",
      "category": "t:categories.custom"
    }
  ]
}
{% endschema %}