{% comment %}
  ============================================================================
  BLOCK: Price Config (Final Version)
  ============================================================================
{% endcomment %}

{%- if block.settings.show_block -%}
  

  <variant-value-updater class="price-config-wrapper" data-id="price-breakdown" {{ block.shopify_attributes }}>
    {%- assign metal_weights_list = product.selected_or_first_available_variant.metafields.custom.metal_weights.value -%}
    {%- assign stone_configurations = product.metafields.custom.stone_configuration.value -%}

    {%- assign total_metals_value = 0 -%}
    {%- assign total_stones_value = 0 -%}
    {%- assign total_making_charges = 0 -%}
    <div class="price-breakdown-table">
      <div class="pbt-row pbt-header">
        <div class="pbt-cell">COMPONENT</div>
        {% comment %} <div class="pbt-cell">QUALITY</div> {% endcomment %}
        <div class="pbt-cell">RATE</div>
        <div class="pbt-cell">WEIGHT</div>
        <div class="pbt-cell pbt-align-right">VALUE</div>
      </div>

      <div class="pbt-row pbt-group-title">
        <div class="pbt-cell">METALS</div>
      </div>

      {% for metal_item in metal_weights_list %}
        {%- assign final_metal_object = metal_item.metal_variant.value -%}
        {% if final_metal_object %}
          {%- assign rate = final_metal_object.pricing | default: 0 -%}
          {%- assign weight = metal_item.metal_weight | default: 0 | times: 1.0 -%}
          {%- assign total_value = rate | times: weight -%}
          {%- assign total_metals_value = total_metals_value | plus: total_value -%}

          {%- assign purity = final_metal_object.purity | default: 100 | times: 1.0 -%}
          {%- assign rate_24k = rate | divided_by: purity | times: 100.0 -%}
          {% comment %} Making Charges  {% endcomment %}
          {%- assign labour_category_object = metal_item.labour_category.value -%}
          {%- assign labour_percentage_value = labour_category_object.labour_percentage | default: 0 -%}
          {%- assign labour_percentage = labour_percentage_value | divided_by: 100.0 -%}
          {%- assign metal_labour_cost = weight | times: labour_percentage |times: rate_24k-%}
          {%- assign total_making_charges = total_making_charges | plus: metal_labour_cost -%}
          
          <div class="pbt-row">
            <div class="pbt-cell"><span class="pbt-main-text">{{ final_metal_object.display_name }}</span></div>
            {% comment %} <div class="pbt-cell">-</div> {% endcomment %}
            <div class="pbt-cell">{{ rate | times: 100 | money }}</div>
            <div class="pbt-cell">{{ weight }} g</div>
            <div class="pbt-cell pbt-align-right"><span>{{ total_value | times: 100 | money }}</span></div>
          </div>
        {% endif %}
      {% endfor %}

      {% comment %} --- NEW: Display Total Making Charges --- {% endcomment %}
      <div class="pbt-row pbt-summary-row">
        <div class="pbt-cell">Making changes</div>
        {% comment %} <div class="pbt-cell">-</div> {% endcomment %}
        <div class="pbt-cell">-</div>
        <div class="pbt-cell">-</div>
        <div class="pbt-cell pbt-align-right">
          <span>{{ total_making_charges | times: 100 | money }}</span>
        </div>
      </div>

      <div class="pbt-row pbt-group-title">
        <div class="pbt-cell">STONES</div>
      </div>

      {% for stone_item in stone_configurations %}
        {% if stone_item %}
          {%- assign pricing_object = stone_item.stone.value -%}
          {%- assign stone_price_per_carat = pricing_object.pricing | default: 0 -%}
          {%- assign total_weight = stone_item.weight_carat | default: 0 | times: 1.0 -%}
          {%- assign total_stone_value_for_item = total_weight | times: stone_price_per_carat -%}
          {%- assign total_stones_value = total_stones_value | plus: total_stone_value_for_item -%}

          <div class="pbt-row">
            <div class="pbt-cell">
              <span class="pbt-main-text">{{ pricing_object.shape_category }} {{ pricing_object.size_category }} {{ pricing_object.type }}</span>
              <span class="pbt-sub-text">x {{ stone_item.number_of_stone }} ({{ stone_item.stone_size }}mm)</span>
            </div>
            {% comment %} <div class="pbt-cell">{{ pricing_object.quality_grade }}</div> {% endcomment %}
            <div class="pbt-cell">{{ stone_price_per_carat | times: 100 | money }}</div>
            <div class="pbt-cell">{{ total_weight }} ct.w</div>
            <div class="pbt-cell pbt-align-right">
              <span>{{ total_stone_value_for_item | times: 100 | money }}</span>
            </div>
          </div>
        {% endif %}
      {% endfor %}
      
      {% comment %} <div class="pbt-row pbt-summary-row">
        <div class="pbt-cell">STONES VALUE</div>
        <div class="pbt-cell">-</div>
        <div class="pbt-cell">-</div>
        <div class="pbt-cell">-</div>
        <div class="pbt-cell pbt-align-right">
          <span>{{ total_stones_value | times: 100 | money }}</span>
        </div>
      </div> {% endcomment %}
      
      {%- assign subtotal = total_metals_value | plus: total_stones_value | plus: total_making_charges -%}
      
      <div class="pbt-row pbt-summary-row">
        <div class="pbt-cell pbt-bold">SUBTOTAL</div>
        {% comment %} <div class="pbt-cell">-</div> {% endcomment %}
        <div class="pbt-cell">-</div>
        <div class="pbt-cell">-</div>
        <div class="pbt-cell pbt-align-right">
          <span style="font-size:18px"><strong>{{ subtotal | times: 100 | money }}</strong></span>
        </div>
      </div>
    </div>
  </variant-value-updater>
{%- endif -%}

<script></script>

{% stylesheet %}
  .price-config-wrapper {
    margin-bottom: 20px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
  }

  .price-breakdown-table {
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    overflow: hidden;
  }

  .pbt-row {
    display: flex;
    align-items: center;
    border-bottom: 1px solid #e0e0e0;
    padding: 10px 15px;
    background-color: #fff;
  }

  .pbt-row:last-child {
    border-bottom: none;
  }

  /* --- OLD STYLES (FOR 5 COLUMNS) --- */
